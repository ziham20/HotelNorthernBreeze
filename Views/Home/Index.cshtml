@{
    ViewData["Title"] = "Home Page";
}

<div id="sandbox-container" class="text-center">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" height="875" src="~/imgs/1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="875" src="~/imgs/2.jpg"  alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="875" src="~/imgs/3.jpg"  alt="Third slide">
            </div>
        </div>   
    </div>
    <div class="home-pg">
        <form asp-action="CreateBooking">
            <div class="card p-5">
                <div class="row">
                    <div class="col-2 ">
                        <div class="form-group">
                            <input id="datepicker" placeholder="Check In" width="150" data-date-format="dd/mm/yyyy" name="fromDate" required/>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <input id="datepicker1" placeholder="Check Out" width="150" data-date-format="dd/mm/yyyy" name="toDate" required/>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="form-group">
                            <select class="form-control" id="exampleFormControlSelect1" name="size">
                                <option value="" selected disabled hidden>Room</option>
                                <option>Single</option>
                                <option>Double</option>
                                <option>Triple family</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <select class="form-control" id="exampleFormControlSelect1" name="category">
                                <option value="" selected disabled hidden>Room Category</option>
                                <option>Standard</option>
                                <option>Deluxe</option>
                                <option>Executive</option>
                                <option>Royal suite</option>
                            </select>
                        </div>
                    </div>

                    <input type="hidden" value="" name="userNic" />

                    <div class="col-2">                       
                            <button type="submit" class="btn btn-primary font-weight-bold">Check</button> 
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

<script>

    $('#datepicker').datepicker({
        format: 'dd/mm/yyyy',
        startDate: '-3d',
        uiLibrary: 'bootstrap4'
    });

    $('#datepicker1').datepicker({
        format: 'dd/mm/yyyy',
        startDate: '-3d',
        uiLibrary: 'bootstrap4'
    });
</script>


@if (ViewBag.error is not null)
{
    <script>
        alert("@ViewBag.error");
    </script>
}